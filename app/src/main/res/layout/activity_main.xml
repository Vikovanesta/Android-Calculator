<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="viewEnd"
        android:text="5 + 5 x 2"
        android:textSize="24sp"
        android:gravity="bottom"
        android:background="@color/purple_200"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/panel"
        android:text="7"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/panel"
        android:layout_toEndOf="@+id/btn_7"
        android:text="8"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/panel"
        android:layout_toEndOf="@+id/btn_8"
        android:text="9"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_7"
        android:text="4"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_7"
        android:layout_toEndOf="@+id/btn_4"
        android:text="5"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_7"
        android:layout_toEndOf="@+id/btn_5"
        android:text="6"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_4"
        android:text="1"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_4"
        android:layout_toEndOf="@+id/btn_1"
        android:text="2"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_4"
        android:layout_toEndOf="@+id/btn_2"
        android:text="3"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_2"
        android:layout_alignStart="@+id/btn_2"
        android:text="0"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_2"
        android:text="AC"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_2"
        android:layout_toEndOf="@+id/btn_0"
        android:text="DEL"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_2"
        android:layout_toEndOf="@+id/btn_delete"
        android:text="+"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_4"
        android:layout_toEndOf="@+id/btn_3"
        android:text="-"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_7"
        android:layout_toEndOf="@+id/btn_6"
        android:text="x"
        android:onClick="InputNilai"/>

    <Button
        android:id="@+id/btn_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/panel"
        android:layout_toEndOf="@+id/btn_9"
        android:text="/"
        android:onClick="InputNilai"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_0"
        android:text="="
        android:onClick="calculate"/>

</RelativeLayout>